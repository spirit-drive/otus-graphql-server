{
  "name": "otus-server",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:spirit-drive/otus-server.git",
  "author": "Igor Zvyagin <spirit-drive@yandex.ru>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --fix src",
    "test": "jest src",
    "build": "tsc --project tsconfig.json",
    "dev": "ts-node-dev src/app.ts",
    "dev:server": "cross-env PORT=80 MODE=production node build/app.js",
    "stop": "pm2 stop app",
    "start:stage": "pm2 start ecosystem.config.js --env stage",
    "start": "pm2 start ecosystem.config.js --env production",
    "restart": "yarn stop && yarn start",
    "schemagen": "graphql-codegen && ts-node enhance.graphql.types.ts",
    "db:start": "brew services start mongodb-community@5.0",
    "db:stop": "brew services stop mongodb-community@5.0",
    "db:start:prod": "sudo systemctl start mongod",
    "db:stop:prod": "sudo systemctl stop mongod"
  },
  "dependencies": {
    "@apollo/server": "^4.9.3",
    "@graphql-tools/schema": "^10.0.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.18.2",
    "graphql": "^16.8.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.14.0",
    "http": "^0.0.1-security",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "passport": "^0.6.0",
    "ts-node-dev": "^2.0.0",
    "ws": "^8.14.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/introspection": "^4.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-react-apollo": "^3.3.7",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.5.9",
    "@types/passport": "^1.0.12",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.48.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "fs": "^0.0.1-security",
    "jest": "^29.6.4",
    "path": "^0.12.7",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
